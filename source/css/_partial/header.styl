.header
  width 100%
  height 4.375rem
  line-height 4.375rem
  box-shadow 0 0 20px rgba(0, 0, 0, .15)
  background-color #FFFFFF
.header-nav
  width 60rem
  margin 0 auto
  a
    text-decoration none
    color #000000
    transition .2s ease
    -webkit-transition .2s ease
    &:hover
      color #3476e0
.blog-title
  display inline-block
  font-size 1.5rem
.navbar
  display inline-block
  float right
  font-size 1rem
.navbar-item
  margin 0 .5rem

@media screen and (max-width: 1024px) 
  .header-nav 
    width 45rem
  
